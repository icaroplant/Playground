<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment"
        app:defaultNavHost="true">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/slParent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvListaMusicas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:itemCount="7"
                        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/item_musica"
                        tools:spanCount="3" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:columnCount="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/slParent">

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/btMudarLayout"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#00BCD4"
                        android:text="Mudar Layout"
                        android:textColor="#fff"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonHome"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#1976D2"
                        android:text="Home"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonCompose"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#7B1FA2"
                        android:text="Jetpack Compose"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonInstrument"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#1976D2"
                        android:text="Instrumental"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonGlide"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#388E3C"
                        android:text="Glide"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonAnimations"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#CF031F"
                        android:text="Animations"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/buttonNotification"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#3F51B5"
                        android:text="Notification"
                        android:textColor="#fff" />

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="@color/blue_500"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button6"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="@color/blue_500"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button7"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="@color/blue_500"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button8"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button9"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button10"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="#F57C00"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button11"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="@color/blue_500"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                    <Button
                        style="@style/DefaultButton"
                        android:id="@+id/button12"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:backgroundTint="@color/blue_500"
                        android:textColor="#fff"
                        tools:text="Deeplink"/>

                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="24dp"
            android:backgroundTint="#4CAF50"
            android:src="@drawable/ic_add"/>


    </FrameLayout>

</layout>

